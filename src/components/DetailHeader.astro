---
// DetailHeader.astro - 詳細ページ用簡易ヘッダー
import ThemeToggle from './ThemeToggle.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="fixed top-0 left-0 right-0 z-50 glass backdrop-blur-md">
  <nav class="container mx-auto px-6 py-4 flex items-center justify-between gap-4">
    <a
      href="/#opus"
      class="flex items-center gap-2 text-gray-300 hover:text-cyan-400 transition-colors shrink-0"
    >
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      <span class="text-sm font-medium hidden sm:inline">ポートフォリオに戻る</span>
    </a>

    <span class="text-white font-semibold text-base truncate text-center">{title}</span>

    <div class="shrink-0">
      <ThemeToggle />
    </div>
  </nav>
</header>
