<script is:inline>
  // „É°„Ç§„É≥„ÇÆ„É£„É©„É™„ÉºÁî®„ÅÆÁä∂ÊÖãÁÆ°ÁêÜ
  const mainGalleryState = new Map();

  // Èñ¢ÈÄ£„Éó„É≠„Ç∏„Çß„ÇØ„Éà„ÇÆ„É£„É©„É™„ÉºÁî®„ÅÆÁä∂ÊÖãÁÆ°ÁêÜ
  const galleryState = new Map();

  // „É°„Ç§„É≥„ÇÆ„É£„É©„É™„ÉºÊõ¥Êñ∞Èñ¢Êï∞
  function updateMainGallery(projectId, currentIndex) {
    const images = document.querySelectorAll('.main-gallery-image-' + projectId);
    const dots = document.querySelectorAll('.main-gallery-dot-' + projectId);

    images.forEach(function(img, idx) {
      img.style.opacity = idx === currentIndex ? '1' : '0';
    });

    dots.forEach(function(dot, idx) {
      dot.style.backgroundColor =
        idx === currentIndex ? 'rgb(34, 211, 238)' : 'rgba(255, 255, 255, 0.5)';
    });

    mainGalleryState.set(projectId, currentIndex);
  }

  // „É°„Ç§„É≥„ÇÆ„É£„É©„É™„Éº: Ê¨°„ÅÆÁîªÂÉè
  window.nextMainImage = function(projectId, totalImages) {
    const current = mainGalleryState.get(projectId) || 0;
    const next = (current + 1) % totalImages;
    updateMainGallery(projectId, next);
  };

  // „É°„Ç§„É≥„ÇÆ„É£„É©„É™„Éº: Ââç„ÅÆÁîªÂÉè
  window.prevMainImage = function(projectId, totalImages) {
    const current = mainGalleryState.get(projectId) || 0;
    const prev = (current - 1 + totalImages) % totalImages;
    updateMainGallery(projectId, prev);
  };

  // Èñ¢ÈÄ£„Éó„É≠„Ç∏„Çß„ÇØ„Éà„ÇÆ„É£„É©„É™„ÉºÊõ¥Êñ∞Èñ¢Êï∞
  function updateGallery(galleryId, currentIndex) {
    const images = document.querySelectorAll('.gallery-image-' + galleryId);
    const dots = document.querySelectorAll('.gallery-dot-' + galleryId);

    images.forEach(function(img, idx) {
      img.style.opacity = idx === currentIndex ? '1' : '0';
    });

    dots.forEach(function(dot, idx) {
      dot.style.backgroundColor =
        idx === currentIndex ? 'rgb(34, 211, 238)' : 'rgba(255, 255, 255, 0.5)';
    });

    galleryState.set(galleryId, currentIndex);
  }

  // Èñ¢ÈÄ£„Éó„É≠„Ç∏„Çß„ÇØ„Éà„ÇÆ„É£„É©„É™„Éº: Ê¨°„ÅÆÁîªÂÉè
  window.nextImage = function(galleryId, totalImages) {
    const current = galleryState.get(galleryId) || 0;
    const next = (current + 1) % totalImages;
    updateGallery(galleryId, next);
  };

  // Èñ¢ÈÄ£„Éó„É≠„Ç∏„Çß„ÇØ„Éà„ÇÆ„É£„É©„É™„Éº: Ââç„ÅÆÁîªÂÉè
  window.prevImage = function(galleryId, totalImages) {
    const current = galleryState.get(galleryId) || 0;
    const prev = (current - 1 + totalImages) % totalImages;
    updateGallery(galleryId, prev);
  };

  // „Ç´„ÉÜ„Ç¥„É™„Éº„Éï„Ç£„É´„Çø„ÉºÊ©üËÉΩ
  document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('.category-filter-btn');
    const projectCards = document.querySelectorAll('.opus-project-card');

    filterButtons.forEach(function(btn) {
      btn.addEventListener('click', function() {
        const selectedCategory = this.getAttribute('data-category');

        // „Éú„Çø„É≥„ÅÆ„Ç¢„ÇØ„ÉÜ„Ç£„ÉñÁä∂ÊÖã„ÇíÊõ¥Êñ∞
        filterButtons.forEach(function(b) {
          b.classList.remove('active-filter');
          if (b.getAttribute('data-category') === 'all') {
            b.classList.remove('bg-white/30');
            b.classList.add('bg-white/10');
          } else {
            b.classList.add('opacity-60');
            b.classList.remove('opacity-100');
          }
        });
        this.classList.add('active-filter');
        if (selectedCategory === 'all') {
          this.classList.remove('bg-white/10');
          this.classList.add('bg-white/30');
        } else {
          this.classList.remove('opacity-60');
          this.classList.add('opacity-100');
        }

        // „Ç´„Éº„Éâ„ÅÆË°®Á§∫/ÈùûË°®Á§∫„ÇíÂàá„ÇäÊõø„Åà
        projectCards.forEach(function(card) {
          if (selectedCategory === 'all') {
            card.style.display = '';
          } else {
            const categories = card.getAttribute('data-categories').split(',');
            card.style.display = categories.includes(selectedCategory) ? '' : 'none';
          }
        });
      });
    });
  });

  // Èñ¢ÈÄ£„Éó„É≠„Ç∏„Çß„ÇØ„ÉàÊäò„Çä„Åü„Åü„ÅøÊ©üËÉΩÔºà„É¢„Éê„Ç§„É´„ÅÆ„ÅøÔºâ
  document.addEventListener('DOMContentLoaded', function() {
    const toggleButtons = document.querySelectorAll('.related-toggle-btn');

    toggleButtons.forEach(function(button) {
      button.addEventListener('click', function() {
        // „É¢„Éê„Ç§„É´Âà§ÂÆöÔºà768pxÊú™Ê∫ÄÔºâ
        if (window.innerWidth >= 768) return;

        const projectId = this.getAttribute('data-project-id');
        if (!projectId) return;

        const container = document.querySelector('[data-related-container="' + projectId + '"]');
        const icon = document.querySelector('[data-related-icon="' + projectId + '"]');

        if (!container || !icon) return;

        const isHidden = container.classList.contains('hidden');

        if (isHidden) {
          container.classList.remove('hidden');
          container.classList.add('grid');
          icon.style.transform = 'rotate(180deg)';
        } else {
          container.classList.add('hidden');
          container.classList.remove('grid');
          icon.style.transform = 'rotate(0deg)';
        }
      });
    });
  });
</script>

