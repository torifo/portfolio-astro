    context?: string; // Markdownå½¢å¼ã®è©³ç´°èª¬æ˜
  }[];
}

interface OpusResponse {
  contents: Opus[];
  totalCount: number;
}

let opus: Opus[] = [];
let allCategories: string[] = [];

try {
  const response = await fetch(`${SERVICE_DOMAIN}opus?limit=100`, {
    headers: {
      'X-MICROCMS-API-KEY': MICROCMS_API_KEY,
    },
  });
  
