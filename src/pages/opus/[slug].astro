---
import Layout from '../../layouts/Layout.astro';
import DetailHeader from '../../components/DetailHeader.astro';
import { fetchAllOpus, generateSlug } from '../../lib/microcms';
import type { RelatedLink, Opus } from '../../lib/microcms';
import { unified } from 'unified';
import remarkParse from 'remark-parse';
import remarkRehype from 'remark-rehype';
import rehypeStringify from 'rehype-stringify';

export async function getStaticPaths() {
  const allOpus = await fetchAllOpus();
  const paths = [];

  for (const opus of allOpus) {
    for (let i = 0; i < opus.relatedLinks.length; i++) {
      const link = opus.relatedLinks[i];
      const slug = generateSlug(opus.id, i);

      let contextHtml = '';
      if (link.context) {
        const result = await unified()
          .use(remarkParse)
          .use(remarkRehype)
          .use(rehypeStringify)
          .process(link.context);
        contextHtml = String(result);
      }

      paths.push({
        params: { slug },
        props: {
          link,
          contextHtml,
          parentTitle: opus.title,
          parentCategory: opus.category,
        },
      });
    }
  }

  return paths;
}

interface Props {
  link: RelatedLink;
  contextHtml: string;
  parentTitle: string;
  parentCategory: string[];
}

const { link, contextHtml, parentTitle, parentCategory } = Astro.props;

const getCategoryColor = (category: string) => {
  const categoryColors: Record<string, string> = {
    'Web': 'bg-cyan-500/20 text-cyan-300',
    'Discord Bot': 'bg-purple-500/20 text-purple-300',
    'Bot': 'bg-indigo-500/20 text-indigo-300',
    'Game': 'bg-green-500/20 text-green-300',
    'TODO': 'bg-orange-500/20 text-orange-300',
    'LP': 'bg-pink-500/20 text-pink-300',
  };
  return categoryColors[category] || 'bg-gray-500/20 text-gray-300';
};
---

<Layout
  title={`${link.service} - Toriforium Portfolio`}
  description={`${link.service} | ${parentTitle}`}
>
  <DetailHeader title={link.service} />

  <main class="pt-24 pb-16 relative z-10">
    <div class="container mx-auto px-6 max-w-4xl">

      <!-- タイトル・カテゴリ -->
      <div class="text-center mb-10">
        <h1 class="text-3xl md:text-4xl font-bold gradient-text mb-2">{link.service}</h1>
        <p class="text-gray-400 mb-3">{parentTitle}</p>
        <div class="flex flex-wrap justify-center gap-2">
          {parentCategory.map((cat) => (
            <span class={`px-3 py-1 ${getCategoryColor(cat)} rounded-full text-xs font-medium`}>
              {cat}
            </span>
          ))}
        </div>
      </div>

      <!-- iframe埋め込み（opusUrlがある場合） -->
      {link.opusUrl && (
        <div class="mb-10">
          <div class="glass rounded-2xl overflow-hidden p-1">
            <div class="relative w-full bg-gray-900 rounded-xl" style="padding-bottom: 62%;">
              <div id="iframe-loader" class="absolute inset-0 flex items-center justify-center z-10">
                <div class="text-center">
                  <div class="w-10 h-10 border-2 border-cyan-400 border-t-transparent rounded-full animate-spin mx-auto mb-3"></div>
                  <p class="text-gray-400 text-sm">読み込み中...</p>
                </div>
              </div>
              <iframe
                id="opus-iframe"
                src={link.opusUrl}
                class="absolute inset-0 w-full h-full rounded-xl"
                title={link.service}
                loading="lazy"
                allow="fullscreen"
              />
            </div>
          </div>
          <div class="text-center mt-3">
            <a
              href={link.opusUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-1.5 text-sm text-gray-400 hover:text-cyan-300 transition-colors"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              <span>新しいタブで開く</span>
            </a>
          </div>
        </div>
      )}

      <!-- サムネイルギャラリー（opusUrlがない場合のみ、またはある場合は下部に補足として） -->
      {link.thumbnail && link.thumbnail.length > 0 && (
        <div class="mb-10">
          <div class="glass rounded-2xl p-6">
            <h2 class="text-lg font-semibold text-white mb-4">Screenshots</h2>
            <div class={`grid gap-4 ${link.thumbnail.length === 1 ? 'grid-cols-1' : 'grid-cols-1 md:grid-cols-2'}`}>
              {link.thumbnail.map((thumb, idx) => (
                <div class="rounded-xl overflow-hidden bg-gray-900 flex items-center justify-center">
                  <img
                    src={thumb.url}
                    alt={`${link.service} - ${idx + 1}`}
                    class="w-full h-auto object-contain"
                    loading="lazy"
                  />
                </div>
              ))}
            </div>
          </div>
        </div>
      )}

      <!-- リンクボタン -->
      {(link.repoUrl || link.opusUrl) && (
        <div class="flex flex-wrap justify-center gap-4 mb-10">
          {link.opusUrl && (
            <a
              href={link.opusUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-cyan-500 to-blue-600 text-white rounded-xl hover:from-cyan-600 hover:to-blue-700 transition-all font-medium"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              <span>Visit Site</span>
            </a>
          )}
          {link.repoUrl && (
            <a
              href={link.repoUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-6 py-3 glass rounded-xl hover:bg-white/10 transition-colors font-medium text-white"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              <span>View Repository</span>
            </a>
          )}
        </div>
      )}

      <!-- context（markdown詳細説明） -->
      {contextHtml && (
        <div class="mb-10">
          <div class="glass rounded-2xl p-6 md:p-8">
            <h2 class="text-lg font-semibold text-white mb-6">About</h2>
            <div class="opus-context" set:html={contextHtml} />
          </div>
        </div>
      )}

      <!-- ポートフォリオに戻るボタン -->
      <div class="text-center">
        <a
          href="/#opus"
          class="inline-flex items-center gap-2 px-6 py-3 glass rounded-xl hover:bg-white/10 transition-colors text-gray-300 hover:text-cyan-400"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          <span>ポートフォリオに戻る</span>
        </a>
      </div>

    </div>
  </main>
</Layout>

<script is:inline>
  // iframeローディング処理
  document.addEventListener('DOMContentLoaded', function () {
    const iframe = document.getElementById('opus-iframe');
    const loader = document.getElementById('iframe-loader');
    if (!iframe || !loader) return;

    iframe.addEventListener('load', function () {
      loader.style.display = 'none';
    });

    // 15秒でタイムアウト表示
    setTimeout(function () {
      if (loader.style.display !== 'none') {
        loader.innerHTML =
          '<div class="text-center px-4"><p class="text-gray-300 text-sm mb-2">埋め込みがブロックされている場合があります</p><p class="text-gray-500 text-xs">上の「新しいタブで開く」から直接アクセスしてください</p></div>';
      }
    }, 15000);
  });
</script>
